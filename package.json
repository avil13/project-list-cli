{
  "name": "project-list-cli",
  "version": "1.4.8",
  "description": "Quick navigation through projects",
  "type": "module",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs"
    }
  },
  "main": "./dist/index.cjs",
  "types": "./dist/index.d.ts",
  "license": "MIT",
  "bin": {
    "project-list": "bin/index.js"
  },
  "files": [
    "dist",
    "src",
    "bin",
    "README.md"
  ],
  "scripts": {
    "start": "npm run build && node dist/index.js",
    "dev": "tsx --tsconfig ./tsconfig.json ./src/index.ts",
    "dev:watch": "nodemon",
    "lint:fix": "oxlint --fix --fix-suggestions --fix-dangerously src/",
    "test": "vitest run",
    "test:watch": "vitest",
    "type-check": "tsc -p . --noEmit",
    "type-check:watch": "npm run type-check -- --watch",
    "build": "unbuild",
    "prepublishOnly": "npm run build && npm run create:shebang",
    "create:shebang": "echo \"#!/usr/bin/env node\n\n$(cat dist/index.js)\" > dist/index.js"
  },
  "unbuild": {
    "failOnWarn": false
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && git update-index --again",
      "pre-push": "npm test",
      "post-checkout": "npm ci"
    }
  },
  "lint-staged": {
    "*.ts": [
      "oxlint --fix --ext .js,.ts"
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/avil13/project-list-cli"
  },
  "devDependencies": {
    "@avil13/eslint-config": "^1.0.7",
    "@clack/core": "^0.5.0",
    "@clack/prompts": "^0.11.0",
    "@types/node": "^24.0.0",
    "lint-staged": "^16.1.0",
    "oxlint": "^1.0.0",
    "tsx": "^4.20.1",
    "typescript": "^5.8.3",
    "unbuild": "^3.5.0",
    "vite": "^6.3.5",
    "vitest": "^3.2.3"
  }
}